<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Primary Colors                                                                      -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Color x:Key="PrimaryBlue">#FF2773EA</Color>
  <Color x:Key="PrimaryBlueDark">#FF1E4DCE</Color>
  <Color x:Key="AccentOrange">#FFFA9750</Color>
  <Color x:Key="AccentOrangeDark">#FFE07830</Color>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Neutral Colors                                                                      -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Color x:Key="White">#FFFFFFFF</Color>
  <Color x:Key="Black">#FF000000</Color>
  <Color x:Key="DarkGray">#FF515151</Color>
  <Color x:Key="MediumGray">#FF252525</Color>
  <Color x:Key="TransparentBlack">#A6000000</Color>
  <Color x:Key="SemiTransparentBlack">#80000000</Color>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Cookie Theme Colors                                                                 -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Color x:Key="CookieBrown">#FF8B4513</Color>
  <Color x:Key="CookieGold">#FFFFD700</Color>
  <Color x:Key="ChocolateChip">#FF3D2314</Color>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Solid Color Brushes                                                                 -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <SolidColorBrush x:Key="PrimaryBlue.Brush" Color="{StaticResource PrimaryBlue}"/>
  <SolidColorBrush x:Key="PrimaryBlueDark.Brush" Color="{StaticResource PrimaryBlueDark}"/>
  <SolidColorBrush x:Key="AccentOrange.Brush" Color="{StaticResource AccentOrange}"/>
  <SolidColorBrush x:Key="AccentOrangeDark.Brush" Color="{StaticResource AccentOrangeDark}"/>
  <SolidColorBrush x:Key="White.Brush" Color="{StaticResource White}"/>
  <SolidColorBrush x:Key="Black.Brush" Color="{StaticResource Black}"/>
  <SolidColorBrush x:Key="DarkGray.Brush" Color="{StaticResource DarkGray}"/>
  <SolidColorBrush x:Key="MediumGray.Brush" Color="{StaticResource MediumGray}"/>
  <SolidColorBrush x:Key="TransparentBlack.Brush" Color="{StaticResource TransparentBlack}"/>
  <SolidColorBrush x:Key="SemiTransparentBlack.Brush" Color="{StaticResource SemiTransparentBlack}"/>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Gradient Brushes                                                                    -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <LinearGradientBrush x:Key="BackgroundGradient.Brush" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="{StaticResource PrimaryBlue}" Offset="0.00"/>
    <GradientStop Color="{StaticResource PrimaryBlueDark}" Offset="1.00"/>
  </LinearGradientBrush>
  
  <LinearGradientBrush x:Key="ButtonGradient.Brush" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="{StaticResource AccentOrange}" Offset="0.00"/>
    <GradientStop Color="{StaticResource AccentOrangeDark}" Offset="1.00"/>
  </LinearGradientBrush>
  
  <LinearGradientBrush x:Key="CookieGradient.Brush" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="{StaticResource CookieBrown}" Offset="0.00"/>
    <GradientStop Color="{StaticResource ChocolateChip}" Offset="1.00"/>
  </LinearGradientBrush>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Typography                                                                          -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <FontFamily x:Key="PrimaryFont">Fonts/#Anton-Regular</FontFamily>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Dimensions                                                                          -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <sys:Double x:Key="HeaderHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">143</sys:Double>
  <sys:Double x:Key="FooterHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">124</sys:Double>
  <sys:Double x:Key="PageWidth" xmlns:sys="clr-namespace:System;assembly=mscorlib">393</sys:Double>
  <sys:Double x:Key="PageHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">852</sys:Double>
  <sys:Double x:Key="CardWidth" xmlns:sys="clr-namespace:System;assembly=mscorlib">371</sys:Double>
  <sys:Double x:Key="CardHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">119</sys:Double>
  <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
  <CornerRadius x:Key="ButtonCornerRadius">5</CornerRadius>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Font Sizes                                                                          -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <sys:Double x:Key="FontSize.ExtraLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">36</sys:Double>
  <sys:Double x:Key="FontSize.Large" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>
  <sys:Double x:Key="FontSize.Medium" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
  <sys:Double x:Key="FontSize.Normal" xmlns:sys="clr-namespace:System;assembly=mscorlib">18</sys:Double>
  <sys:Double x:Key="FontSize.Small" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
  <sys:Double x:Key="FontSize.ExtraSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
  <sys:Double x:Key="FontSize.Tiny" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Common Styles                                                                       -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.ExtraLarge}"/>
    <Setter Property="Foreground" Value="{StaticResource White.Brush}"/>
    <Setter Property="TextAlignment" Value="Center"/>
  </Style>
  
  <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.Small}"/>
    <Setter Property="Foreground" Value="{StaticResource White.Brush}"/>
    <Setter Property="TextAlignment" Value="Center"/>
  </Style>
  
  <Style x:Key="CardTitleTextStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.Medium}"/>
    <Setter Property="Foreground" Value="{StaticResource White.Brush}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  
  <Style x:Key="ButtonTextStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.ExtraSmall}"/>
    <Setter Property="Foreground" Value="{StaticResource White.Brush}"/>
  </Style>
  
  <Style x:Key="StatLabelTextStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}"/>
    <Setter Property="Foreground" Value="{StaticResource White.Brush}"/>
    <Setter Property="Width" Value="200"/>
  </Style>
  
  <Style x:Key="StatValueTextStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}"/>
    <Setter Property="Foreground" Value="{StaticResource AccentOrange.Brush}"/>
  </Style>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Card Styles                                                                         -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Style x:Key="UpgradeCardStyle" TargetType="Border">
    <Setter Property="Width" Value="{StaticResource CardWidth}"/>
    <Setter Property="Height" Value="{StaticResource CardHeight}"/>
    <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
    <Setter Property="Background" Value="{StaticResource TransparentBlack.Brush}"/>
    <Setter Property="Padding" Value="16"/>
    <Setter Property="Margin" Value="0,0,0,8"/>
  </Style>
  
  <Style x:Key="StatCardStyle" TargetType="Border">
    <Setter Property="Width" Value="361"/>
    <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
    <Setter Property="Background" Value="{StaticResource TransparentBlack.Brush}"/>
    <Setter Property="Padding" Value="16"/>
    <Setter Property="Margin" Value="0,0,0,8"/>
  </Style>
  
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Button Styles                                                                       -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Style x:Key="TransparentButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="0"/>
  </Style>
  
  <Style x:Key="BuyButtonBorderStyle" TargetType="Border">
    <Setter Property="Width" Value="163"/>
    <Setter Property="Height" Value="47"/>
    <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}"/>
    <Setter Property="Background" Value="{StaticResource AccentOrange.Brush}"/>
  </Style>
  
</ResourceDictionary>
