<!-- 
  MobileOnly - Warning screen for non-mobile users (Screen Overlay)
  Display Mode: Screen Overlay, Render Order: 100 (top-most layer)
  Input Mode: Interactive, blocking
  Shows warning when user is playing on web instead of mobile
-->

<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DataContext="MobileOnly_DataSet"
  d:DesignWidth="393"
  d:DesignHeight="852"
  Background="#E6000000"
  IsHitTestVisible="True">

  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" IsHitTestVisible="True">
    <!-- Dark overlay background - Transparent background makes entire area clickable -->
    
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- Content Section -->
    <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="32,0" MaxWidth="340" IsHitTestVisible="False">
      
      <!-- Warning Icon -->
      <TextBlock Text="⚠️" 
                 FontSize="64" 
                 HorizontalAlignment="Center" 
                 Margin="0,0,0,16"/>
      
      <!-- Title -->
      <TextBlock Text="Mobile Only" 
                 FontFamily="Fonts/#Anton-Regular" 
                 FontSize="42" 
                 Foreground="#FFD700" 
                 HorizontalAlignment="Center"
                 TextAlignment="Center"
                 Margin="0,0,0,12">
        <TextBlock.Effect>
          <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="3" Opacity="0.8"/>
        </TextBlock.Effect>
      </TextBlock>
      
      <!-- Message -->
      <TextBlock Text="This game must be played on mobile to keep the game fair for all players." 
                 FontFamily="Fonts/#Roboto-Regular" 
                 FontSize="20" 
                 Foreground="#FFFFFF" 
                 HorizontalAlignment="Center"
                 TextAlignment="Center"
                 TextWrapping="Wrap"
                 Margin="0,0,0,20"
                 Opacity="0.9"/>
      
      <!-- Instructions -->
      <TextBlock Text="Scan the QR code below with your mobile device to jump straight into the world!" 
                 FontFamily="Fonts/#Roboto-Regular" 
                 FontSize="16" 
                 Foreground="#FFD700" 
                 HorizontalAlignment="Center"
                 TextAlignment="Center"
                 TextWrapping="Wrap"
                 Margin="0,0,0,24"
                 Opacity="0.95"/>
      
    </StackPanel>
    
    <!-- QR Code Section -->
    <Image Grid.Row="2" Source="Images/WorldQR.png" 
           Width="200" Height="200"
           HorizontalAlignment="Center"
           Margin="0,0,0,32"/>
    
  </Grid>
</Page>
