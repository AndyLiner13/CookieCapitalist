<!-- 
  ShopPage - Noesis XAML
  Cookie Clicker Shop UI with templated upgrade cards
-->

<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Width="393"
  Height="852">

  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Resources                                                                           -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Grid.Resources>
    <!-- Upgrade Card Template -->
    <DataTemplate x:Key="UpgradeCardTemplate">
      <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <!-- Upgrade Image -->
          <Image Source="{Binding Path=image, FallbackValue='Clicker_Image.png'}" Width="87" Height="87" Stretch="UniformToFill"/>
          
          <!-- Upgrade Details -->
          <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
            <!-- Upgrade Name -->
            <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
              <TextBlock Text="{Binding Path=name, FallbackValue='+1 Cookie Clicker'}" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
            </Border>
            
            <!-- Buy Button and Rate -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
              <!-- Buy Button -->
              <Button Width="163" Height="47" Command="{Binding Path=buyCommand}" Background="Transparent" BorderThickness="0" Padding="0">
                <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Path=buyLabel, FallbackValue='Buy x1'}" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                    <TextBlock Text="{Binding Path=price, FallbackValue='$26.60'}" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                  </StackPanel>
                </Border>
              </Button>
              
              <!-- Production Rate -->
              <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Path=rate, FallbackValue='0.1s'}" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Border>
            </StackPanel>
          </StackPanel>
        </StackPanel>
      </Border>
    </DataTemplate>
  </Grid.Resources>

  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Main Content                                                                        -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Border Width="393" Height="852" ClipToBounds="True">
    <Border.Background>
      <LinearGradientBrush StartPoint="0.50,-0.00" EndPoint="0.50,1.00">
        <GradientStop Color="#2773ea" Offset="0.00"/>
        <GradientStop Color="#1e4dce" Offset="1.00"/>
      </LinearGradientBrush>
    </Border.Background>
    
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="143"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="124"/>
      </Grid.RowDefinitions>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Header - Cookie Count                                                             -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Border Width="393" Height="143" Background="#80000000" Padding="16,58,16,8" Grid.Row="0">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <TextBlock Text="123,456,789 Cookies!" FontFamily="Fonts/#Anton-Regular" FontSize="36" Foreground="#ffffff" TextAlignment="Center"/>
          <TextBlock Text="cookies per second" FontFamily="Fonts/#Anton-Regular" FontSize="15" Foreground="#ffffff" TextAlignment="Center"/>
        </StackPanel>
      </Border>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Upgrade Cards List                                                                -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Padding="0,8,0,8">
