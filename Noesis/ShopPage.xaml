                      <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                        <TextBlock Text="$26.60" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                      </StackPanel>
                    </Border>
                  </Button>
                  <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="0.1s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                  </Border>
                </StackPanel>
              </StackPanel>
            </StackPanel>
          </Border>
          <!-- Upgrade Card 4 -->
          <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
              <Image Source="FactoryImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
              <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                  <TextBlock Text="Cookie Factory" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                </Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                  <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                    <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                      <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                        <TextBlock Text="$26.60" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                      </StackPanel>
                    </Border>
                  </Button>
                  <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="0.1s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
