<!-- 
  Leaderboard - Player rankings screen (Screen Overlay)
  Display Mode: Screen Overlay, Render Order: 5
  Input Mode: Interactive blocking
-->

<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DataContext="Leaderboard_DataSet"
  d:DesignWidth="393"
  d:DesignHeight="852">

  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{x:Null}">
    <Grid Background="{x:Null}">
      <Grid.RowDefinitions>
        <RowDefinition Height="143"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      
      <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Padding="8,8,8,8">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="16,0,16,140">
          
          <!-- Leaderboard Entry 1 -->
          <Border Height="80" CornerRadius="8" Background="#252525" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Text="1" FontFamily="Fonts/#Anton-Regular" FontSize="24" Foreground="#FFD700" VerticalAlignment="Center" Width="30"/>
                <Image Source="Images/avatarimage.png" Width="56" Height="56" Stretch="UniformToFill" Margin="8,0,0,0"/>
              </StackPanel>
              <TextBlock Text="{Binding leaderboard1.username}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" 
                         Grid.Column="1" VerticalAlignment="Center" Margin="12,0,12,0" TextTrimming="CharacterEllipsis"/>
              <TextBlock Text="{Binding leaderboard1.score}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#FFD700" 
                         Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
          </Border>
          
          <!-- Leaderboard Entry 2 -->
          <Border Height="80" CornerRadius="8" Background="#252525" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Text="2" FontFamily="Fonts/#Anton-Regular" FontSize="24" Foreground="#C0C0C0" VerticalAlignment="Center" Width="30"/>
                <Image Source="Images/avatarimage.png" Width="56" Height="56" Stretch="UniformToFill" Margin="8,0,0,0"/>
              </StackPanel>
              <TextBlock Text="{Binding leaderboard2.username}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" 
                         Grid.Column="1" VerticalAlignment="Center" Margin="12,0,12,0" TextTrimming="CharacterEllipsis"/>
              <TextBlock Text="{Binding leaderboard2.score}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#C0C0C0" 
                         Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
          </Border>
          
          <!-- Leaderboard Entry 3 -->
          <Border Height="80" CornerRadius="8" Background="#252525" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Text="3" FontFamily="Fonts/#Anton-Regular" FontSize="24" Foreground="#CD7F32" VerticalAlignment="Center" Width="30"/>
                <Image Source="Images/avatarimage.png" Width="56" Height="56" Stretch="UniformToFill" Margin="8,0,0,0"/>
              </StackPanel>
              <TextBlock Text="{Binding leaderboard3.username}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" 
                         Grid.Column="1" VerticalAlignment="Center" Margin="12,0,12,0" TextTrimming="CharacterEllipsis"/>
              <TextBlock Text="{Binding leaderboard3.score}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#CD7F32" 
                         Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
          </Border>
          
          <!-- Leaderboard Entry 4 (Current Player - highlighted) -->
          <Border Height="80" CornerRadius="8" Background="#1a4d1a" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch" BorderBrush="#4CAF50" BorderThickness="2">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Text="{Binding leaderboard4.rank}" FontFamily="Fonts/#Anton-Regular" FontSize="24" Foreground="#4CAF50" VerticalAlignment="Center" Width="30"/>
                <Image Source="Images/avatarimage.png" Width="56" Height="56" Stretch="UniformToFill" Margin="8,0,0,0"/>
              </StackPanel>
              <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,12,0">
                <TextBlock Text="{Binding leaderboard4.username}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" TextTrimming="CharacterEllipsis"/>
                <TextBlock Text="(You)" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#4CAF50"/>
              </StackPanel>
              <TextBlock Text="{Binding leaderboard4.score}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#4CAF50" 
                         Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
          </Border>
          
          <!-- Leaderboard Entry 5 -->
          <Border Height="80" CornerRadius="8" Background="#252525" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Text="5" FontFamily="Fonts/#Anton-Regular" FontSize="24" Foreground="#888888" VerticalAlignment="Center" Width="30"/>
                <Image Source="Images/avatarimage.png" Width="56" Height="56" Stretch="UniformToFill" Margin="8,0,0,0"/>
              </StackPanel>
              <TextBlock Text="{Binding leaderboard5.username}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" 
                         Grid.Column="1" VerticalAlignment="Center" Margin="12,0,12,0" TextTrimming="CharacterEllipsis"/>
              <TextBlock Text="{Binding leaderboard5.score}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#888888" 
                         Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
          </Border>
          
        </StackPanel>
      </ScrollViewer>
    </Grid>
  </Grid>
</Page>
