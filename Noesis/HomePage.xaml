<!-- 
  HomePage - Noesis XAML
  Cookie Clicker main game screen with clickable cookie
-->

<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Width="393"
  Height="852">

  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Main Content                                                                        -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Border Width="393" Height="852" ClipToBounds="True">
    <Border.Background>
      <LinearGradientBrush StartPoint="0.50,-0.00" EndPoint="0.50,1.00">
        <GradientStop Color="#2773ea" Offset="0.00"/>
        <GradientStop Color="#1e4dce" Offset="1.00"/>
      </LinearGradientBrush>
    </Border.Background>
    
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="143"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="256"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="124"/>
      </Grid.RowDefinitions>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Header - Cookie Count                                                             -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Border Width="393" Height="143" Background="#80000000" Padding="16,58,16,8" Grid.Row="0">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <TextBlock Text="{Binding Path=cookieCount}" FontFamily="Fonts/#Anton-Regular" FontSize="36" Foreground="#ffffff" TextAlignment="Center"/>
          <TextBlock Text="{Binding Path=cookiesPerSecond}" FontFamily="Fonts/#Anton-Regular" FontSize="15" Foreground="#ffffff" TextAlignment="Center"/>
        </StackPanel>
      </Border>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Clickable Cookie                                                                  -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Button Grid.Row="2" Command="{Binding Path=onCookieClick}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="Coogie.png" Width="256" Height="256" Stretch="UniformToFill"/>
      </Button>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Footer - Navigation Tabs                                                          -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Border Width="393" Height="124" Background="#80000000" Padding="16" Grid.Row="4" HorizontalAlignment="Center">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="93"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="93"/>
          </Grid.ColumnDefinitions>
          <Button Grid.Column="0" Command="{Binding Path=events.onLeftTabClick}" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <Image Source="LeftTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
          <Button Grid.Column="2" Command="{Binding Path=events.onMiddleTabClick}" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <Image Source="MiddleTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
          <Button Grid.Column="4" Command="{Binding Path=events.onRightTabClick}" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <Image Source="RightTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
        </Grid>
      </Border>
    </Grid>
  </Border>
</Grid>