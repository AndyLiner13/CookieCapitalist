<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors">

  <Grid x:Name="Background_Master">
    <MediaElement x:Name="Background_Video" Source="/Root;component/Assets/Videos/Video_MountainFlyover.mp4" LoadedBehavior="Manual" SpeedRatio="1">

             <b:Interaction.Triggers>

                <b:EventTrigger EventName="Loaded">
                    <noesis:PlayMediaAction/>
                </b:EventTrigger>

                <b:EventTrigger EventName="MediaEnded">
                    <noesis:StopMediaAction/>
                    <noesis:PlayMediaAction/>
                </b:EventTrigger>

                </b:Interaction.Triggers>

    </MediaElement>
  </Grid>

</Component>