
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  x:Name="ComponentRoot">
  <Grid x:Name="Panel_Controls_Master">
    <Grid.Effect>
      <DropShadowEffect Direction="90" BlurRadius="8" ShadowDepth="0"/>
    </Grid.Effect>
    <Border x:Name="Backer" BorderBrush="#FFFFFFFF" CornerRadius="64,64,0,0">
      <Border.Background>
        <SolidColorBrush Color="{DynamicResource Grey2}"/>
      </Border.Background>
    </Border>
    <Border x:Name="Inset" CornerRadius="62,62,0,0" Grid.ColumnSpan="3" Margin="2,2,2,0" Background="{DynamicResource PanelGradient}"/>
  </Grid>
</Component>