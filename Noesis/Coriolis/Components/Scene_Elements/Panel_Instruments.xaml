
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid x:Name="Panel_Instruments_Master">
    <Grid.Effect>
      <DropShadowEffect Direction="90" BlurRadius="8" ShadowDepth="0"/>
    </Grid.Effect>
    <Border x:Name="Backer" BorderBrush="#FFFFFFFF" CornerRadius="128,128,0,0">
      <Border.Background>
        <SolidColorBrush Color="{DynamicResource Grey2}"/>
      </Border.Background>
    </Border>
    <Border x:Name="Inset" Background="{DynamicResource PanelGradient}" CornerRadius="126,126,0,0" Margin="2,2,2,0"/>
  </Grid>
</Component>