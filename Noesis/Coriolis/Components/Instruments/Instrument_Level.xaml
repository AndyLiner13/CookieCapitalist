
<Component x:Name="Instrument_Level_Root"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Component.DynamicProperties>
    <DynamicProperty Name="Pitch" Type="Float"/>
  </Component.DynamicProperties>
  <Grid x:Name="Level_Master" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_Housing.xaml" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_Bevel.xaml" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_Socket.xaml"/>
    <Component Source="/Root;component/Components/Instruments_Gauges/Gauge_Level.xaml" Level_Float="{Binding Path=Level_Float, ElementName=Instrument_Level_Root}"/>
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_LevelHolder.xaml" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Component.Effect>
        <DropShadowEffect Direction="90" BlurRadius="2" ShadowDepth="2" Opacity="0.5"/>
      </Component.Effect>
    </Component>
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_Glint.xaml" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_Ring.xaml" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_Labels.xaml" Label_Bottom_Str="| DEGREES |" Label_Top_Str="PITCH"/>
  </Grid>
</Component>