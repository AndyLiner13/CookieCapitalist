
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid x:Name="Glint_Master" Width="180" Height="180">
    <Ellipse x:Name="Shadow_Soft" StrokeThickness="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="180" Opacity="0.25">
      <Ellipse.Stroke>
        <SolidColorBrush Color="{DynamicResource Grey1}"/>
      </Ellipse.Stroke>
      <Ellipse.Effect>
        <BlurEffect Radius="32"/>
      </Ellipse.Effect>
    </Ellipse>
    <Ellipse x:Name="Shadow_Extended" StrokeThickness="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="180" TrimEnd="-132">
      <Ellipse.Stroke>
        <SolidColorBrush Color="#FF000000" Opacity="0.25"/>
      </Ellipse.Stroke>
    </Ellipse>
    <Ellipse x:Name="Shadow_Hard" Stroke="#FF000000" StrokeThickness="2"/>
    <Ellipse x:Name="Shine" StrokeThickness="0" Fill="{DynamicResource HardGlint}"/>
  </Grid>
</Component>