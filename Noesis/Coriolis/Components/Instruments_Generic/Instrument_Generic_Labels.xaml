
<Component x:Name="Instrument_Labels_Component"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Component.DynamicProperties>
    <DynamicProperty Type="String" Name="Label_Top"/>
    <DynamicProperty Name="Label_Bottom" Type="String"/>
  </Component.DynamicProperties>
  <Grid x:Name="Instrument_Labels_Master" Margin="8,10,8,8">
    <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="OCR A" FontSize="12" Text="{Binding Path=Label_Bottom_Str, ElementName=Instrument_Labels_Component}">
      <TextBlock.Foreground>
        <SolidColorBrush Color="{DynamicResource Grey3}"/>
      </TextBlock.Foreground>
    </TextBlock>
    <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="OCR A" FontSize="12" Text="{Binding Path=Label_Top_Str, ElementName=Instrument_Labels_Component}">
      <TextBlock.Foreground>
        <SolidColorBrush Color="{DynamicResource Grey3}"/>
      </TextBlock.Foreground>
    </TextBlock>
  </Grid>
</Component>