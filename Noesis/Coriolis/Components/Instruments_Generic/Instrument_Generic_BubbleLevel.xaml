<Component x:Name="BubbleLevel_Root"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
    <Component.Resources>
        <Storyboard x:Key="BubbleLevel_IdleAnimation" AutoReverse="True" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Marble_IdleAnimation" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BounceEase EasingMode="EaseInOut" Bounces="2" Bounciness="3"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Component.Resources>

    <Grid x:Name="BubbleLevel_Master" Width="80" Height="24">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="2" ShadowDepth="0" Direction="-90"/>
        </Grid.Effect>
    <Border x:Name="Back" CornerRadius="12,12,12,12">
      <Border.Background>
        <SolidColorBrush Color="#FF000000"/>
      </Border.Background>
    </Border>
        <Border x:Name="GlassBevel" CornerRadius="12,12,12,12" Margin="1,1,1,1" Background="{DynamicResource Metallic}" Opacity="0.5"/>
        <Grid x:Name="InnerArea" Margin="3,3,3,3">
            <Border x:Name="InnerBacker" CornerRadius="9,9,9,9">
                <Border.Background>
                    <SolidColorBrush Color="{DynamicResource Grey1}"/>
                </Border.Background>
            </Border>
            <Grid x:Name="Marble_IdleAnimation" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Ellipse x:Name="Marble" StrokeThickness="0" Width="{Binding Path=ActualHeight, ElementName=Marble}" Margin="0,2,0,2">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFC6C6C6" Offset="1"/>
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFFFFFFF" Offset="0.39999998"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Direction="-90"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>
            <Border x:Name="InnerShadow" CornerRadius="9,9,9,9" BorderBrush="Black" BorderThickness="4,4,4,4" Opacity="0.5">
                <Border.Effect>
                    <BlurEffect Radius="2"/>
                </Border.Effect>
            </Border>
            <Grid x:Name="Lines_Demarcation">
                <Grid x:Name="Line_Demarcation_Left" Width="1" Margin="0,0,32,0" RenderTransformOrigin="0.0,1.0">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="4"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Grid.Background>
                        <SolidColorBrush Color="{DynamicResource White1}"/>
                    </Grid.Background>
                </Grid>
                <Grid x:Name="Line_Demarcation_Right" Background="#FFFFFFFF" Width="1" Margin="32,0,0,0" RenderTransformOrigin="1.0,1.0">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-4"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                </Grid>
            </Grid>
        </Grid>
        <Border x:Name="Glint" CornerRadius="12,12,12,12" Background="{DynamicResource HardGlint}"/>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard x:Name="BubbleLevel_IdleAnimation_Begin" Storyboard="{StaticResource BubbleLevel_IdleAnimation}"/>
            </EventTrigger>
        </Grid.Triggers>
  </Grid>

</Component>
