
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" xmlns:noesis="clr-namespace:NoesisGUIExtensions">
  <Grid x:Name="Needle_Short_Master" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid.Effect>
      <DropShadowEffect Color="{DynamicResource Grey1}" BlurRadius="2" ShadowDepth="2" Direction="90"/>
    </Grid.Effect>
    <StackPanel x:Name="Needle_VerticalStack" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Viewbox x:Name="Needle_Viewbox" Width="10">
        <Grid x:Name="Needle_Grid">
          <Canvas x:Name="Needle_Canvas" Height="54" Width="10">
            <Path Data="F1M9,8L5,0 1,8 0,18 2,54 8,54 10,18 9,8z" Fill="#FFFFFFFF" Stretch="Fill" StrokeThickness="0" Height="54" Width="10" Canvas.Top="0" Canvas.Left="0"/>
          </Canvas>
        </Grid>
      </Viewbox>
      <Grid x:Name="Base" Width="8" Visibility="Visible" VerticalAlignment="Center" Height="16">
        <Grid.Background>
          <SolidColorBrush Color="{DynamicResource Grey1}"/>
        </Grid.Background>
      </Grid>    </StackPanel>
  </Grid>
  </Component>