
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  x:Name="AircraftControl_Single_Root" xmlns:noesis="clr-namespace:NoesisGUIExtensions">
  <Component.Resources>
    <ResourceDictionary>
      <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
      <ControlTemplate x:Key="AircraftControl_Slider" TargetType="Slider">
        <Grid x:Name="Slider_Master">
          <Grid x:Name="Slider_Trough">
            <Border x:Name="Slider_Trough_Back" CornerRadius="16,16,16,16">
              <Border.Background>
                <SolidColorBrush Color="{DynamicResource Grey2}"/>
              </Border.Background>
            </Border>
            <Border x:Name="Slider_Trough_InnerShadow" CornerRadius="14,14,14,14" Margin="5,5,5,5" ClipToBounds="True">
              <Border.Background>
                <SolidColorBrush Color="{DynamicResource Grey1}"/>
              </Border.Background>
              <Border.Effect>
                <noesis:DirectionalBlurEffect Radius="4"/>
              </Border.Effect>
            </Border>
            <Border x:Name="Slider_Trough_Edge" BorderThickness="2,2,2,2" CornerRadius="14,14,14,14" Margin="2" Visibility="Visible">
              <Border.BorderBrush>
                <SolidColorBrush Color="{DynamicResource Grey1}"/>
              </Border.BorderBrush>
            </Border>
          </Grid>
          <Track x:Name="PART_Track" Maximum="{Binding Path=Maximum, RelativeSource={RelativeSource TemplatedParent}}" Orientation="Vertical" Value="{Binding Path=Value, RelativeSource={RelativeSource TemplatedParent}}" Minimum="{Binding Path=Minimum, RelativeSource={RelativeSource TemplatedParent}}" Cursor="SizeNS">
            <Track.Thumb>
              <Thumb Template="{DynamicResource AircraftControl_Slider_Thumb}"/>
            </Track.Thumb>
          </Track>
        </Grid>
      </ControlTemplate>
      <ControlTemplate x:Key="AircraftControl_Slider_Thumb" TargetType="Thumb">
        <Grid x:Name="Slider_Thumb_Master" Width="{Binding Path=ActualHeight, ElementName=Slider_Thumb_Master}" Height="32">
          <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">
              <VisualState x:Name="Normal"/>
              <VisualState x:Name="MouseOver">
                <Storyboard>
                  <ColorAnimationUsingKeyFrames Storyboard.TargetName="Ellipse0" Storyboard.TargetProperty="(Shape.Fill).(GradientBrush.GradientStops)[0].(GradientStop.Color)">
                    <EasingColorKeyFrame KeyTime="00:00:00" Value="#FF992626"/>
                  </ColorAnimationUsingKeyFrames>
                </Storyboard>
              </VisualState>
              <VisualState x:Name="Pressed"/>
              <VisualState x:Name="Disabled"/>
            </VisualStateGroup>
          </VisualStateManager.VisualStateGroups>
          <Grid.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="4" Direction="-90"/>
          </Grid.Effect>
          <Ellipse x:Name="Ellipse0">
            <Ellipse.Fill>
              <RadialGradientBrush>
                <GradientStop Color="#FF802020" Offset="1"/>
                <GradientStop Color="#FFFF4040" Offset="0"/>
              </RadialGradientBrush>
            </Ellipse.Fill>
          </Ellipse>
        </Grid>
      </ControlTemplate>
    </ResourceDictionary>
  </Component.Resources>
  <Component.DynamicProperties>
    <DynamicProperty Type="Float" Name="Value_Current"/>
    <DynamicProperty Name="Value_Max" Type="Float"/>
    <DynamicProperty Name="Value_Min" Type="Float"/>
    <DynamicProperty Name="Label_Max" Type="String"/>
    <DynamicProperty Name="Label_Min" Type="String"/>
    <DynamicProperty Name="Label_Name" Type="String"/>
    <DynamicProperty Name="Legend_Left"/>
    <DynamicProperty Name="Legend_Right"/>
  </Component.DynamicProperties>
  <Grid x:Name="AircraftControl_Single_Master" Margin="16,0,16,0">
    <StackPanel x:Name="HorizontalStack" Orientation="Horizontal" HorizontalAlignment="Center">
      <Grid x:Name="Labels_Left" Margin="0,8,8,8" Visibility="{Binding Path=Legend_Left_Bool, ElementName=AircraftControl_Single_Root, Converter={StaticResource BooleanToVisibilityConverter}}">
        <StackPanel x:Name="Label_Left_Stack_Bottom" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
          <TextBlock FontFamily="OCR A" TextAlignment="Right" FontSize="12" Text="{Binding Path=Label_Min_Str, ElementName=AircraftControl_Single_Root}" TextWrapping="Wrap">
            <TextBlock.Foreground>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </TextBlock.Foreground>
          </TextBlock>
          <Grid x:Name="Dash" Width="16" Height="2" Margin="8,0,0,0">
            <Grid.Background>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </Grid.Background>
          </Grid>
        </StackPanel>
        <TextBlock FontFamily="OCR A" TextAlignment="Right" FontSize="12" Text="{Binding Path=Label_Name_Str, ElementName=AircraftControl_Single_Root}" TextWrapping="Wrap" VerticalAlignment="Center">
          <TextBlock.Foreground>
            <SolidColorBrush Color="{DynamicResource Grey3}"/>
          </TextBlock.Foreground>
        </TextBlock>
        <StackPanel x:Name="Label_Left_Stack_Top" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Right">
          <TextBlock FontFamily="OCR A" TextAlignment="Right" FontSize="12" TextWrapping="Wrap" Text="{Binding Path=Label_Max_Str, ElementName=AircraftControl_Single_Root}">
            <TextBlock.Foreground>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </TextBlock.Foreground>
          </TextBlock>
          <Grid x:Name="Dash001" Width="16" Height="2" Margin="8,0,0,0">
            <Grid.Background>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </Grid.Background>
          </Grid>
        </StackPanel>
      </Grid>
      <Grid x:Name="SliderArea" Width="32">
        <Slider Orientation="Vertical" Template="{DynamicResource AircraftControl_Slider}" Value="{Binding Path=Value_Current_Float, ElementName=AircraftControl_Single_Root}" Foreground="{x:Null}" Background="{x:Null}" Maximum="{Binding Path=Value_Max_Float, ElementName=AircraftControl_Single_Root}" Minimum="{Binding Path=Value_Min_Float, ElementName=AircraftControl_Single_Root}"/>
      </Grid>
      <Grid x:Name="Labels_Right" Margin="8,8,0,8" Visibility="{Binding Path=Legend_Right_Bool, ElementName=AircraftControl_Single_Root, Converter={StaticResource BooleanToVisibilityConverter}}">
        <StackPanel x:Name="Label_Right_Stack_Bottom" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Left">
          <Grid x:Name="Dash002" Width="16" Height="2" Margin="0,0,8,0">
            <Grid.Background>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </Grid.Background>
          </Grid>
          <TextBlock FontFamily="OCR A" TextAlignment="Right" FontSize="12" Text="{Binding Path=Label_Min_Str, ElementName=AircraftControl_Single_Root}" TextWrapping="Wrap">
            <TextBlock.Foreground>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </TextBlock.Foreground>
          </TextBlock>
        </StackPanel>
        <TextBlock FontFamily="OCR A" FontSize="12" Text="{Binding Path=Label_Name_Str, ElementName=AircraftControl_Single_Root}" TextWrapping="Wrap" VerticalAlignment="Center">
          <TextBlock.Foreground>
            <SolidColorBrush Color="{DynamicResource Grey3}"/>
          </TextBlock.Foreground>
        </TextBlock>
        <StackPanel x:Name="Label_Right_Stack_Top" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left">
          <Grid x:Name="Dash003" Width="16" Height="2" Margin="0,0,8,0">
            <Grid.Background>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </Grid.Background>
          </Grid>
          <TextBlock FontFamily="OCR A" TextAlignment="Right" FontSize="12" Text="{Binding Path=Label_Max_Str, ElementName=AircraftControl_Single_Root}" TextWrapping="Wrap">
            <TextBlock.Foreground>
              <SolidColorBrush Color="{DynamicResource Grey3}"/>
            </TextBlock.Foreground>
          </TextBlock>
        </StackPanel>
      </Grid>
    </StackPanel>
  </Grid>
</Component>