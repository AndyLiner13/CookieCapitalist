
<Component x:Name="HelicopterComponent"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" xmlns:noesis="clr-namespace:NoesisGUIExtensions">
  <Component.Resources>
    <Storyboard x:Key="Helicopter_Animation" RepeatBehavior="Forever" SpeedRatio="10">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Helicopter_Frame_1" Storyboard.TargetProperty="(UIElement.Opacity)">
        <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.4000000" Value="1"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.5000000" Value="0"/>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Helicopter_Frame_2" Storyboard.TargetProperty="(UIElement.Opacity)">
        <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.4000000" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.5000000" Value="1"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
      </DoubleAnimationUsingKeyFrames>
      <PointAnimationUsingKeyFrames Storyboard.TargetName="TailRotor" Storyboard.TargetProperty="(UIElement.RenderTransformOrigin)">
        <EasingPointKeyFrame KeyTime="0:0:0" Value="0.5,0.5"/>
        <EasingPointKeyFrame KeyTime="0:0:1" Value="0.5,0.5"/>
      </PointAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TailRotor" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
        <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1" Value="180"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
  </Component.Resources>
  <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
    <Grid x:Name="Helicopter_Master" VerticalAlignment="Center" HorizontalAlignment="Center">
      <Viewbox Margin="56,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid x:Name="Helicopter_Sprites" Height="1080" Width="1920">
          <Grid x:Name="Helicopter_Frame_1">
            <Grid.Background>
              <ImageBrush Stretch="Uniform" ImageSource="/Root;component/Assets/Bitmaps_Sprites/Bitmap_Sprite_Helicopter_Frame_1.png"/>
            </Grid.Background>
          </Grid>
          <Grid x:Name="Helicopter_Frame_2" Opacity="0">
            <Grid.Background>
              <ImageBrush Stretch="Uniform" ImageSource="/Root;component/Assets/Bitmaps_Sprites/Bitmap_Sprite_Helicopter_Frame_2.png"/>
            </Grid.Background>
          </Grid>
        </Grid>
      </Viewbox>
      <Grid x:Name="TailRotor" Height="400" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="{Binding Path=ActualHeight, ElementName=TailRotor}" Margin="0,0,0,96">
        <Grid.Effect>
          <noesis:PixelateEffect Size="8"/>
        </Grid.Effect>
        <Grid.RenderTransform>
          <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="180"/>
            <TranslateTransform/>
          </TransformGroup>
        </Grid.RenderTransform>
        <Ellipse x:Name="Bolt_Narrow" Fill="#FF292666" StrokeThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="64" Width="{Binding Path=ActualHeight, ElementName=Bolt_Narrow}"/>
        <Ellipse x:Name="Bolt_Wide" Fill="#FF292666" StrokeThickness="0" Height="96" HorizontalAlignment="Center" VerticalAlignment="Center" Width="{Binding Path=ActualHeight, ElementName=Bolt_Wide}" Opacity="0.5"/>
        <noesis:RadialTicks x:Name="Rotor_Major" TickLength="140" Padding="0" Brush="#FF292666" MaxAngle="180" Maximum="100" Spacing="10" MinAngle="-180" TickWidth="24"/>
        <noesis:RadialTicks x:Name="Rotor_Tips" TickLength="20" Padding="0" TickWidth="24" Brush="#FFD1722E" MaxAngle="180" Maximum="100" Spacing="20" MinAngle="-180"/>
      </Grid>

      <Grid.Triggers>
        <EventTrigger RoutedEvent="Loaded">
          <BeginStoryboard x:Name="Helicopter_Animation_Begin" Storyboard="{StaticResource Helicopter_Animation}"/>
        </EventTrigger>
      </Grid.Triggers>
    </Grid>
  </Viewbox>

</Component>