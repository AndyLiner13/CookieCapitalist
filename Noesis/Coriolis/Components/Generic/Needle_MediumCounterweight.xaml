
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid x:Name="Needle_Medium_Master" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid.Effect>
      <DropShadowEffect Color="{DynamicResource Grey1}" BlurRadius="2" ShadowDepth="2" Direction="90"/>
    </Grid.Effect>
    <Grid Height="48" Width="16" HorizontalAlignment="Center" VerticalAlignment="Center">
      <StackPanel x:Name="Needle_VerticalStack">
        <Ellipse Fill="#FF0D0D0D" Height="16" Width="16" StrokeThickness="0" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,1.0">
          <Ellipse.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform Y="8"/>
            </TransformGroup>
          </Ellipse.RenderTransform>
        </Ellipse>
        <Grid x:Name="Base" Background="#FF0D0D0D" Height="32" Width="8" VerticalAlignment="Center" Visibility="Visible" RenderTransformOrigin="0.5,0.0">
          <Grid.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Grid.RenderTransform>
        </Grid>
      </StackPanel>
    </Grid>
  </Grid>
</Component>