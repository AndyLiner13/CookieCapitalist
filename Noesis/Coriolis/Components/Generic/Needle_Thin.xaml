
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid x:Name="Needle_Thin_Master" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid.Effect>
      <DropShadowEffect Color="{DynamicResource Grey1}" BlurRadius="2" ShadowDepth="2" Direction="90"/>
    </Grid.Effect>
    <StackPanel x:Name="Needle_VerticalStack" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Viewbox x:Name="Needle_Viewbox" Width="4">
        <Grid x:Name="Needle_Grid">
          <Canvas x:Name="Needle_Canvas" Height="100" Width="6">
            <Path Data="F1M5,4L3,0 1,4 0,18 0,100 6,100 6,18 5,4z" Fill="#FFFFFFFF" Stretch="Fill" StrokeThickness="0" Height="100" Width="6" Canvas.Top="0" Canvas.Left="0"/>
          </Canvas>
        </Grid>
      </Viewbox>
      <StackPanel x:Name="Base" Orientation="Horizontal" Height="16" Width="8" HorizontalAlignment="Center" ClipToBounds="True">
        <Grid Width="4" RenderTransformOrigin="0.0,1.0">
          <Grid.Background>
            <SolidColorBrush Color="{DynamicResource Grey1}"/>
          </Grid.Background>
          <Grid.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform AngleX="-7"/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Grid.RenderTransform>
          <Grid.LayoutTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Grid.LayoutTransform>
        </Grid>
        <Grid Width="4" RenderTransformOrigin="1.0,1.0">
          <Grid.Background>
            <SolidColorBrush Color="{DynamicResource Grey1}"/>
          </Grid.Background>
          <Grid.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform AngleX="7"/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Grid.RenderTransform>
          <Grid.LayoutTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Grid.LayoutTransform>
        </Grid>
      </StackPanel>
    </StackPanel>
  </Grid>
</Component>