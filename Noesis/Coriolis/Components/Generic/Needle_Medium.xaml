
<Component
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid x:Name="Needle_Medium_Master" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid.Effect>
      <DropShadowEffect Color="{DynamicResource Grey1}" BlurRadius="2" ShadowDepth="2" Direction="90"/>
    </Grid.Effect>
    <StackPanel x:Name="Needle_VerticalStack" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Viewbox x:Name="Needle_Viewbox" Width="8">
        <Grid x:Name="Needle_Grid">
          <Canvas Height="64" Width="8">
            <Path Data="F1M7,6L4,0 1,6 0,18 1,64 7,64 8,18 7,6z" Fill="#FFFFFFFF" Stretch="Fill" StrokeThickness="0" Height="64" Width="8" Canvas.Top="0" Canvas.Left="0"/>
          </Canvas>
        </Grid>
      </Viewbox>
      <Grid x:Name="Base" Width="8" Visibility="Visible" VerticalAlignment="Center" Height="16">
        <Grid.Background>
          <SolidColorBrush Color="{DynamicResource Grey1}"/>
        </Grid.Background>
      </Grid>    </StackPanel>
  </Grid>
</Component>