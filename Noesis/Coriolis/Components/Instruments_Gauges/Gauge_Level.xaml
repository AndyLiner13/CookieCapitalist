
<Component x:Name="Level_Root"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" xmlns:noesis="clr-namespace:NoesisGUIExtensions">
  <Component.Resources>
    <Storyboard x:Key="Gauge_Level_IdleAnimation" AutoReverse="True" RepeatBehavior="Forever">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Floater_IdleAnimation" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
        <EasingDoubleKeyFrame KeyTime="00:00:00" Value="2"/>
        <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="-2">
          <EasingDoubleKeyFrame.EasingFunction>
            <BounceEase EasingMode="EaseInOut" Bounces="2" Bounciness="3"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Top_Ring_IdleAnimation" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
        <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-2"/>
        <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="2">
          <EasingDoubleKeyFrame.EasingFunction>
            <BounceEase EasingMode="EaseInOut" Bounces="2" Bounciness="3"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
  </Component.Resources>

  <Component.DynamicProperties>
    <DynamicProperty Name="Level" Type="Float"/>
  </Component.DynamicProperties>

  <Grid x:Name="Gauge_Level_Master" Width="180" Height="180" ClipToBounds="True">

    <Grid.Clip>
      <EllipseGeometry RadiusX="89" Center="90,90" RadiusY="89"/>
    </Grid.Clip>
    
    <Grid x:Name="Back">
      <Ellipse x:Name="Backer_TwoTone" StrokeThickness="0" Fill="{DynamicResource Level_TwoTone}"/>
    </Grid>
    <Grid x:Name="Floater_IdleAnimation" RenderTransformOrigin="0.5,0.5">
      <Grid.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform/>
        </TransformGroup>
      </Grid.RenderTransform>
      <Grid x:Name="Floater" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
          <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform/>
            <TranslateTransform>
              <TranslateTransform.Y>
                <Binding Path="Level_Float" ElementName="Level_Root">
                  <Binding.Converter>
                    <noesis:MathConverter Expression="{}{0}*2"/>
                  </Binding.Converter>
                </Binding>
              </TranslateTransform.Y>
            </TranslateTransform>
          </TransformGroup>
        </Grid.RenderTransform>
        <Ellipse x:Name="Bobble" Fill="{DynamicResource Level_TwoTone}" StrokeThickness="0" RenderTransformOrigin="0.5,0.5">
          <Ellipse.Effect>
            <DropShadowEffect BlurRadius="64" ShadowDepth="0" Direction="90"/>
          </Ellipse.Effect>
          <Ellipse.RenderTransform>
            <TransformGroup>
              <ScaleTransform ScaleY="0.7"/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Ellipse.RenderTransform>
        </Ellipse>
        <StackPanel x:Name="Lines_Measures" VerticalAlignment="Center">
          <StackPanel x:Name="TopStack">
            <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_LabeledLevelLine.xaml" Label_Str="20"/>
            <Grid x:Name="Line_Short_Top_2" Background="#FFFFFFFF" Height="2" Width="24"/>
            <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_LabeledLevelLine.xaml" Label_Str="10"/>
            <Grid x:Name="Line_Short_Top_1" Height="2" Width="24">
              <Grid.Background>
                <SolidColorBrush Color="{DynamicResource White1}"/>
              </Grid.Background>
            </Grid>
          </StackPanel>
          <Grid x:Name="Line_Horizon" Height="4" Margin="0,8,0,8">
            <Grid.Background>
              <SolidColorBrush Color="{DynamicResource White1}"/>
            </Grid.Background>
          </Grid>
          <StackPanel x:Name="BottomStack">
            <Grid x:Name="Line_Short_Bottom_1" Height="2" Width="24">
              <Grid.Background>
                <SolidColorBrush Color="{DynamicResource White1}"/>
              </Grid.Background>
            </Grid>
            <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_LabeledLevelLine.xaml" Label_Str="10"/>
            <Grid x:Name="Line_Short_Bottom_2" Background="#FFFFFFFF" Height="2" Width="24"/>
            <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_LabeledLevelLine.xaml" Label_Str="20"/>
          </StackPanel>
        </StackPanel>
      </Grid>
    </Grid>
    <Grid x:Name="Dipstick" VerticalAlignment="Top" HorizontalAlignment="Center">
      <Grid x:Name="Dipstick_SoftShadow">
        <Grid.Effect>
          <DropShadowEffect BlurRadius="16" Direction="90" ShadowDepth="0" Opacity="0.5"/>
        </Grid.Effect>
        <Grid x:Name="Dipstick_HardShadow">
          <Grid.Effect>
            <DropShadowEffect BlurRadius="4" ShadowDepth="0" Direction="90"/>
          </Grid.Effect>
          <StackPanel x:Name="Dipstick_VerticalStack" Width="8">
            <Border x:Name="Plastic" Height="24" Opacity="0.5">
              <Border.Background>
                <SolidColorBrush Color="{DynamicResource White1}"/>
              </Border.Background>
            </Border>
            <Border x:Name="Orange" Height="16" CornerRadius="0,0,4,4">
              <Border.Background>
                <SolidColorBrush Color="{DynamicResource Orange1}"/>
              </Border.Background>
            </Border>
          </StackPanel>
        </Grid>
      </Grid>
    </Grid>
    <Grid x:Name="Mast">
      <Grid x:Name="Mast_Shadow_Hard">
        <Grid.Effect>
          <DropShadowEffect BlurRadius="4" ShadowDepth="0" Direction="-90"/>
        </Grid.Effect>
        <Grid x:Name="Mast_Shadow_Soft">
          <Grid.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Direction="-90" Opacity="0.49746844"/>
          </Grid.Effect>
          <Ellipse x:Name="CentreDot" Width="8" Height="8" StrokeThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse.Fill>
              <SolidColorBrush Color="{DynamicResource Yellow1}"/>
            </Ellipse.Fill>
          </Ellipse>
          <StackPanel x:Name="CrosshairHorizontalStack" Orientation="Horizontal" HorizontalAlignment="Center">
            <Border Background="#FFD1B62E" Height="4" Width="32" HorizontalAlignment="Left" VerticalAlignment="Center" CornerRadius="2,0,0,2" Margin="0,0,-4,0"/>
            <Ellipse x:Name="Crescent" StrokeThickness="4" Height="32" Width="32" HorizontalAlignment="Center" VerticalAlignment="Center" ClipToBounds="True">
              <Ellipse.Clip>
                <RectangleGeometry Rect="0,16,32,16"/>
              </Ellipse.Clip>
              <Ellipse.Stroke>
                <SolidColorBrush Color="{DynamicResource Yellow1}"/>
              </Ellipse.Stroke>
            </Ellipse>
            <Border VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" Height="4" CornerRadius="0,2,2,0" Margin="-4,0,0,0">
              <Border.Background>
                <SolidColorBrush Color="{DynamicResource Yellow1}"/>
              </Border.Background>
            </Border>
          </StackPanel>
          <StackPanel x:Name="Stems_VerticalStack" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Border x:Name="Stem_Short" Background="#FFD1B62E" Height="8" Width="2" VerticalAlignment="Bottom"/>
            <Border x:Name="Stem_Long" Width="4" VerticalAlignment="Bottom" Height="80">
              <Border.Background>
                <SolidColorBrush Color="{DynamicResource Yellow1}"/>
              </Border.Background>
            </Border>
          </StackPanel>
        </Grid>
      </Grid>
    </Grid>
    <Grid x:Name="Top_Ring_IdleAnimation" RenderTransformOrigin="0.5,0.5">
      <Grid.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform/>
        </TransformGroup>
      </Grid.RenderTransform>
      <Grid x:Name="Top_Ring">
        <Ellipse x:Name="Ring_Thick" StrokeThickness="16" Stroke="{DynamicResource Level_TwoTone}"/>
        <Grid x:Name="HorizonLine">
          <Grid x:Name="HorizonLine_Left" Height="4" HorizontalAlignment="Left" Width="16">
            <Grid.Background>
              <SolidColorBrush Color="{DynamicResource White1}"/>
            </Grid.Background>
          </Grid>
          <Grid x:Name="HorizonLine_Right" Background="#FFFFFFFF" Height="4" Width="16" HorizontalAlignment="Right"/>
        </Grid>
        <Grid x:Name="Ticks">
          <noesis:RadialTicks x:Name="RadialTicks_Major" Padding="0" TickLength="16" TickWidth="4" MinAngle="45" MaxAngle="-45" Spacing="10" Maximum="10">
            <noesis:RadialTicks.Brush>
              <SolidColorBrush Color="{DynamicResource White1}"/>
            </noesis:RadialTicks.Brush>
          </noesis:RadialTicks>
          <noesis:RadialTicks x:Name="RadialTicks_Minor_Left_Single" Padding="8" Spacing="10" TickLength="8" TickWidth="4" MinAngle="-70" MaxAngle="0" Maximum="10">
            <noesis:RadialTicks.Brush>
              <SolidColorBrush Color="{DynamicResource White1}"/>
            </noesis:RadialTicks.Brush>
          </noesis:RadialTicks>
          <noesis:RadialTicks x:Name="RadialTicks_Minor_Left_Pair" Padding="8" TickLength="8" TickWidth="4" MinAngle="-32" Spacing="10" Maximum="10" MaxAngle="-16">
            <noesis:RadialTicks.Brush>
              <SolidColorBrush Color="{DynamicResource White1}"/>
            </noesis:RadialTicks.Brush>
          </noesis:RadialTicks>
          <noesis:RadialTicks x:Name="RadialTicks_Minor_Right_Single" MinAngle="70" MaxAngle="0" TickLength="8" TickWidth="4" Spacing="10" Padding="8" Maximum="10">
            <noesis:RadialTicks.Brush>
              <SolidColorBrush Color="{DynamicResource White1}"/>
            </noesis:RadialTicks.Brush>
          </noesis:RadialTicks>
          <noesis:RadialTicks x:Name="RadialTicks_Minor_Right_Pair" TickWidth="4" TickLength="8" Padding="8" Spacing="10" Maximum="10" MinAngle="32" MaxAngle="16">
            <noesis:RadialTicks.Brush>
              <SolidColorBrush Color="{DynamicResource White1}"/>
            </noesis:RadialTicks.Brush>
          </noesis:RadialTicks>
          <Grid x:Name="Tick_Keystone">
            <noesis:RadialTicks x:Name="Keystone_Central" Padding="0" Spacing="10" TickLength="16" MinAngle="0" MaxAngle="180" TickWidth="4" Maximum="1">
              <noesis:RadialTicks.Brush>
                <SolidColorBrush Color="{DynamicResource White1}"/>
              </noesis:RadialTicks.Brush>
            </noesis:RadialTicks>
            <noesis:RadialTicks x:Name="Keystone_Left_1" TickWidth="4" TickLength="16" Padding="0" Spacing="10" MinAngle="-2" MaxAngle="180" Maximum="1">
              <noesis:RadialTicks.Brush>
                <SolidColorBrush Color="{DynamicResource White1}"/>
              </noesis:RadialTicks.Brush>
            </noesis:RadialTicks>
            <noesis:RadialTicks x:Name="Keystone_Right_1" TickWidth="4" TickLength="16" Padding="0" Spacing="10" MinAngle="2" MaxAngle="180" Maximum="1">
              <noesis:RadialTicks.Brush>
                <SolidColorBrush Color="{DynamicResource White1}"/>
              </noesis:RadialTicks.Brush>
            </noesis:RadialTicks>
          </Grid>
        </Grid>
        <Grid x:Name="EdgeEffects" Width="148" Height="148">
          <Ellipse x:Name="Shadow_Soft" StrokeThickness="4" Opacity="0.25">
            <Ellipse.Stroke>
              <SolidColorBrush Color="{DynamicResource Grey1}"/>
            </Ellipse.Stroke>
            <Ellipse.Effect>
              <BlurEffect Radius="4"/>
            </Ellipse.Effect>
          </Ellipse>
          <Ellipse x:Name="Shadow_Soft_Wide" Stroke="#FF0D0D0D" StrokeThickness="16" Opacity="0.25">
            <Ellipse.Effect>
              <BlurEffect Radius="32"/>
            </Ellipse.Effect>
          </Ellipse>
          <Ellipse x:Name="Shadow_Hard" Stroke="#FF0D0D0D" Opacity="0.5">
            <Ellipse.Effect>
              <BlurEffect Radius="2"/>
            </Ellipse.Effect>
          </Ellipse>
          <Ellipse x:Name="Ring_InnerEdge">
            <Ellipse.Stroke>
              <SolidColorBrush Color="{DynamicResource Grey2}"/>
            </Ellipse.Stroke>
          </Ellipse>
        </Grid>
      </Grid>
    </Grid>

    <Grid.Triggers>
      <EventTrigger RoutedEvent="Loaded">
        <BeginStoryboard x:Name="Gauge_Level_IdleAnimation_Begin" Storyboard="{StaticResource Gauge_Level_IdleAnimation}"/>
      </EventTrigger>
    </Grid.Triggers>
  </Grid>
</Component>