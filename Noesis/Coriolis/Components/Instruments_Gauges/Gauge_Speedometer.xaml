
<Component x:Name="Speedometer_Root"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" xmlns:noesis="clr-namespace:NoesisGUIExtensions"
  RenderTransformOrigin="0.5,0.5">
  <Component.Resources>
    <Storyboard x:Key="Gauge_Speedometer_IdleAnimation" RepeatBehavior="Forever" AutoReverse="True">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Rotating_Needles_IdleAnimation" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
        <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RotatingNeedles_IdleAnimation" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
        <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-3"/>
        <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="3">
          <EasingDoubleKeyFrame.EasingFunction>
            <BounceEase EasingMode="EaseInOut" Bounces="2" Bounciness="3"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
  </Component.Resources>

  <Component.RenderTransform>
    <TransformGroup>
      <ScaleTransform/>
      <SkewTransform/>
      <RotateTransform Angle="{Binding ElementName=Speedometer_Root}"/>
      <TranslateTransform/>
    </TransformGroup>
  </Component.RenderTransform>

  <Component.DynamicProperties>
    <DynamicProperty Name="Airspeed" Type="Float"/>
  </Component.DynamicProperties>

  <Grid x:Name="Gauge_Speedometer_Master" Width="180" Height="180" ClipToBounds="True">

    <Grid.Clip>
      <EllipseGeometry RadiusX="89" Center="90,90" RadiusY="89"/>
    </Grid.Clip>

    <Viewbox x:Name="Logo" Width="40" Height="40" RenderTransformOrigin="0.5,0.5" d:IsLocked="True">
      <Viewbox.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform X="-2" Y="1"/>
        </TransformGroup>
      </Viewbox.RenderTransform>
      <Grid>
        <Canvas Height="648.07" Width="660.49">
          <Path Data="F1M460.12,0L590.52,34.94 660.49,295.44 437.84,517.82 307.44,482.88 284.12,396.05 414.52,430.99 573.55,272.14 526.91,98.48 396.51,63.54 460.12,0z" Fill="#FF2AA6E2" Stretch="Fill" StrokeThickness="0" Height="517.82" Width="376.37" Canvas.Left="284.12" Canvas.Top="0"/>
          <Path Data="F1M495.1,130.25L530.09,260.5 466.47,324.04 431.49,193.79 214.16,135.55 86.93,262.63 121.91,392.88 34.98,369.59 0,239.34 190.84,48.72 495.1,130.25z" Fill="#FF2AA6E2" Stretch="Fill" StrokeThickness="0" Height="344.16" Width="530.09" Canvas.Left="0" Canvas.Top="48.72"/>
          <Path Data="F1M312.75,202.26L225.82,178.97 130.4,274.28 212.02,578.19 472.82,648.07 568.24,552.76 544.92,465.93 449.5,561.24 275.64,514.65 217.33,297.57 312.75,202.26z" Fill="#FF2AA6E2" Stretch="Fill" StrokeThickness="0" Height="469.1" Width="437.84" Canvas.Left="130.4" Canvas.Top="178.97"/>
        </Canvas>
      </Grid>
    </Viewbox>
    <Grid x:Name="Gauge_Outer">
      <noesis:RadialBorder x:Name="Zone_Green" Brush="#FF64D12E" Padding="0" BorderWidth="8" RenderTransformOrigin="0.5,0.5" MaxAngle="135" MinAngle="-135">
        <noesis:RadialBorder.RenderTransform>
          <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="180"/>
            <TranslateTransform/>
          </TransformGroup>
        </noesis:RadialBorder.RenderTransform>
      </noesis:RadialBorder>
      <noesis:RadialBorder x:Name="Zone_Yellow" Padding="0" BorderWidth="8" MinAngle="-90" MaxAngle="-45">
        <noesis:RadialBorder.Brush>
          <SolidColorBrush Color="{DynamicResource Yellow1}"/>
        </noesis:RadialBorder.Brush>
      </noesis:RadialBorder>
      <noesis:RadialBorder x:Name="Zone_Red" BorderWidth="16" Padding="0" MinAngle="-45" MaxAngle="25">
        <noesis:RadialBorder.Brush>
          <LinearGradientBrush StartPoint="0.5,0" EndPoint="0,0.5" Opacity="0.5">
            <GradientStop Color="#FFD12E2E" Offset="1"/>
            <GradientStop Color="#00D12E2E"/>
          </LinearGradientBrush>
        </noesis:RadialBorder.Brush>
      </noesis:RadialBorder>
      <noesis:RadialTicks x:Name="Ticks_Major" MinAngle="-180" MaxAngle="180" TickWidth="4" Maximum="80" Spacing="10" Padding="0" TickLength="16">
        <noesis:RadialTicks.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialTicks.Brush>
      </noesis:RadialTicks>
      <noesis:RadialTicks x:Name="Ticks_Minor_Right" Padding="0" TickWidth="4" TickLength="8" MinAngle="0" MaxAngle="180" Maximum="40" Spacing="5">
        <noesis:RadialTicks.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialTicks.Brush>
      </noesis:RadialTicks>
      <noesis:RadialTicks x:Name="Ticks_Minor_Left" TickWidth="4" TickLength="8" Padding="0" Spacing="5" Minimum="40" Maximum="70" MinAngle="-180" MaxAngle="-45">
        <noesis:RadialTicks.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialTicks.Brush>
      </noesis:RadialTicks>
      <noesis:RadialTicks x:Name="Tick_Red" Padding="0" TickLength="16" Spacing="5" MinAngle="-42" MaxAngle="-43" Maximum="80">
        <noesis:RadialTicks.Brush>
          <SolidColorBrush Color="{DynamicResource Red1}"/>
        </noesis:RadialTicks.Brush>
      </noesis:RadialTicks>
      <noesis:RadialNumbers x:Name="Numbers_Right" FontFamily="OCR A" FontSize="18" MinAngle="45" MaxAngle="135" Padding="32" Maximum="30" Spacing="10" Minimum="10">
        <noesis:RadialNumbers.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialNumbers.Brush>
      </noesis:RadialNumbers>
      <noesis:RadialNumbers x:Name="Numbers_Left" FontSize="18" FontFamily="OCR A" Spacing="10" Padding="32" Minimum="50" Maximum="70" MinAngle="-135" MaxAngle="-45">
        <noesis:RadialNumbers.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialNumbers.Brush>
      </noesis:RadialNumbers>
      <noesis:RadialNumbers x:Name="Number_Bottom" FontFamily="OCR A" FontSize="18" MinAngle="-180" MaxAngle="0" Padding="32" Spacing="80" Maximum="80" Minimum="40">
        <noesis:RadialNumbers.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialNumbers.Brush>
      </noesis:RadialNumbers>
      <TextBlock x:Name="Number_Top" Text="0" TextWrapping="Wrap" FontSize="16" FontFamily="OCR A" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="24,2,0,0">
        <TextBlock.Foreground>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </TextBlock.Foreground>
      </TextBlock>
      <TextBlock x:Name="Number_Legend" Text="KTS" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="OCR A" Margin="0,16,56,0" TextAlignment="Center">
        <TextBlock.Foreground>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </TextBlock.Foreground>
      </TextBlock>
    </Grid>
    <Grid x:Name="Gauge_Inner" Margin="48,48,48,48" d:IsLocked="True">
      <noesis:RadialBorder Padding="0" MinAngle="-180" MaxAngle="135" BorderWidth="4" RenderTransformOrigin="0.5,0.5">
        <noesis:RadialBorder.RenderTransform>
          <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="180"/>
            <TranslateTransform/>
          </TransformGroup>
        </noesis:RadialBorder.RenderTransform>
        <noesis:RadialBorder.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialBorder.Brush>
      </noesis:RadialBorder>
      <noesis:RadialTicks x:Name="Ticks" Padding="0" TickLength="8" Maximum="7" Spacing="1" MaxAngle="135" MinAngle="-180" RenderTransformOrigin="0.5,0.5">
        <noesis:RadialTicks.RenderTransform>
          <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="180"/>
            <TranslateTransform/>
          </TransformGroup>
        </noesis:RadialTicks.RenderTransform>
        <noesis:RadialTicks.Brush>
          <SolidColorBrush Color="{DynamicResource White1}"/>
        </noesis:RadialTicks.Brush>
      </noesis:RadialTicks>
    </Grid>
    <Grid x:Name="RotatingNeedles_IdleAnimation" RenderTransformOrigin="0.5,0.5">
      <Grid.RenderTransform>
        <TransformGroup>
          <ScaleTransform/>
          <SkewTransform/>
          <RotateTransform/>
          <TranslateTransform/>
        </TransformGroup>
      </Grid.RenderTransform>
      <Grid x:Name="Rotating_Needles" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
          <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform/>
            <TranslateTransform/>
          </TransformGroup>
        </Grid.RenderTransform>
        <noesis:RadialNeedle MinAngle="-180" MaxAngle="180" Maximum="80" Value="{Binding Path=Airspeed_Float, ElementName=Speedometer_Root}">
          <Component Source="/Root;component/Components/Generic/Needle_MediumCounterweight.xaml"/>
        </noesis:RadialNeedle>
        <Grid x:Name="NeedleFlipper" RenderTransformOrigin="0.5,0.5">
          <Grid.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform Angle="180"/>
              <TranslateTransform/>
            </TransformGroup>
          </Grid.RenderTransform>
          <noesis:RadialNeedle MaxAngle="180" MinAngle="-180" Maximum="80" Value="{Binding Path=Airspeed_Float, ElementName=Speedometer_Root}">
            <Component Source="/Root;component/Components/Generic/Needle_Medium.xaml"/>
          </noesis:RadialNeedle>
        </Grid>
      </Grid>
    </Grid>
    <Component Source="/Root;component/Components/Instruments_Generic/Instrument_Generic_Fastener.xaml" Width="8" Height="8"/>

    <Grid.Triggers>
      <EventTrigger RoutedEvent="Loaded">
        <BeginStoryboard x:Name="Gauge_Speedometer_IdleAnimation_Begin" Storyboard="{StaticResource Gauge_Speedometer_IdleAnimation}"/>
      </EventTrigger>
    </Grid.Triggers>
  </Grid>
</Component>