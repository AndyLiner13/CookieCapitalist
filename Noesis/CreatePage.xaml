<!-- CreatePage - Noesis XAML -->

<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Width="393"
  Height="852">
  
  <Grid.Resources>
    <!-- Progress Bar Template with Animation (Active) -->
    <ControlTemplate x:Key="ProgressBarTemplate" TargetType="ProgressBar">
      <Border Height="30" CornerRadius="4" Background="#333333" ClipToBounds="True">
        <Grid>
          <!-- Progress Fill Container -->
          <Border x:Name="PART_Track" CornerRadius="4" ClipToBounds="True">
            <!-- Colored Fill Bar -->
            <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" CornerRadius="4" ClipToBounds="True" RenderTransformOrigin="0,0.5">
              <Border.RenderTransform>
                <ScaleTransform x:Name="ProgressScale" ScaleX="0"/>
              </Border.RenderTransform>
            </Border>
          </Border>
          <!-- Text Label -->
          <TextBlock Text="{TemplateBinding Tag}" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
      </Border>
      <ControlTemplate.Triggers>
        <!-- Animation trigger when loaded -->
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
          <BeginStoryboard>
            <Storyboard>
              <!-- Progress fill animation (linear, looping) -->
              <DoubleAnimation
                Storyboard.TargetName="ProgressScale"
                Storyboard.TargetProperty="ScaleX"
                From="0" To="1"
                Duration="0:0:7.5"
                RepeatBehavior="Forever"/>
            </Storyboard>
          </BeginStoryboard>
        </EventTrigger>
      </ControlTemplate.Triggers>
    </ControlTemplate>
    
    <!-- Progress Bar Template (Disabled/Greyed Out) - No animation -->
    <ControlTemplate x:Key="ProgressBarTemplateDisabled" TargetType="ProgressBar">
      <Border Height="30" CornerRadius="4" Background="#252525" ClipToBounds="True">
        <Grid>
          <!-- Empty progress (no fill) -->
          <Border CornerRadius="4" ClipToBounds="True"/>
          <!-- Text Label (greyed out) -->
          <TextBlock Text="{TemplateBinding Tag}" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
      </Border>
    </ControlTemplate>
    
    <!-- Upgrade Node Template (Active) -->
    <ControlTemplate x:Key="UpgradeNodeTemplate" TargetType="ContentControl">
      <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
          <Border Width="87" Height="87" CornerRadius="18" Background="#666666" ClipToBounds="True"/>
          <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
            <!-- Progress Bar using custom template -->
            <ProgressBar Template="{StaticResource ProgressBarTemplate}" 
                         Height="30" Width="240"
                         Tag="{TemplateBinding Tag}" 
                         Foreground="{TemplateBinding Background}"
                         Minimum="0" Maximum="100" Value="100"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
              <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                  <TextBlock Text="$26.60" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                </StackPanel>
              </Border>
              <Border Width="73" Height="47" CornerRadius="5" Background="#515151" Margin="5,0,0,0">
                <TextBlock Text="0.1s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Border>
            </StackPanel>
          </StackPanel>
        </StackPanel>
      </Border>
    </ControlTemplate>
    
    <!-- Upgrade Node Template (Disabled/Greyed Out) -->
    <ControlTemplate x:Key="UpgradeNodeTemplateDisabled" TargetType="ContentControl">
      <Border Width="371" Height="119" CornerRadius="8" Background="#66000000" Padding="16">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
          <Border Width="87" Height="87" CornerRadius="18" Background="#444444" ClipToBounds="True"/>
          <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
            <!-- Progress Bar using disabled template -->
            <ProgressBar Template="{StaticResource ProgressBarTemplateDisabled}" 
                         Height="30" Width="240"
                         Tag="{TemplateBinding Tag}" 
                         Minimum="0" Maximum="100" Value="0"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
              <Border Width="162" Height="47" CornerRadius="5" Background="#4a4a4a">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <TextBlock Text="Locked" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#888888"/>
                  <TextBlock Text="---" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#666666"/>
                </StackPanel>
              </Border>
              <Border Width="73" Height="47" CornerRadius="5" Background="#3a3a3a" Margin="5,0,0,0">
                <TextBlock Text="--" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#666666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Border>
            </StackPanel>
          </StackPanel>
        </StackPanel>
      </Border>
    </ControlTemplate>
  </Grid.Resources>
  
  <Border Width="393" Height="852" ClipToBounds="True">
    <Border.Background>
      <LinearGradientBrush StartPoint="0.50,-0.00" EndPoint="0.50,1.00">
      <GradientStop Color="#2773ea" Offset="0.00"/>
      <GradientStop Color="#1e4dce" Offset="1.00"/>
      </LinearGradientBrush>
    </Border.Background>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="120"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Border Width="393" Height="120" Background="#80000000" Padding="16,58,16,8" Grid.Row="0">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock x:Name="TotalViewsText" Text="1,234,567 Views!" FontFamily="Fonts/#Anton-Regular" FontSize="36" Foreground="#ffffff"/>
          </StackPanel>
        </StackPanel>
      </Border>
      <Canvas Width="393" Height="732" Grid.Row="1">
        <!-- Upgrade Node 1: Planning -->
        <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Canvas.Left="11" Canvas.Top="28">
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Border Width="87" Height="87" CornerRadius="18" Background="#666666" ClipToBounds="True"/>
            <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
              <ProgressBar Template="{StaticResource ProgressBarTemplate}" Height="30" Width="240" Tag="Planning" Foreground="#ff0000" Minimum="0" Maximum="100" Value="100"/>
              <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Border Width="162" Height="47" CornerRadius="5" Background="#fa9750">
                  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                    <TextBlock Text="$26.60" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                  </StackPanel>
                </Border>
                <Border Width="73" Height="47" CornerRadius="5" Background="#515151" Margin="5,0,0,0">
                  <TextBlock x:Name="PlanningTimerText" Text="5.2s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>
        <!-- Upgrade Node 2: Recording -->
        <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Canvas.Left="11" Canvas.Top="157">
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Border Width="87" Height="87" CornerRadius="18" Background="#666666" ClipToBounds="True"/>
            <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
              <ProgressBar Template="{StaticResource ProgressBarTemplate}" Height="30" Width="240" Tag="Recording" Foreground="#ffa500" Minimum="0" Maximum="100" Value="100"/>
              <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Border Width="162" Height="47" CornerRadius="5" Background="#fa9750">
                  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                    <TextBlock Text="$26.60" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                  </StackPanel>
                </Border>
                <Border Width="73" Height="47" CornerRadius="5" Background="#515151" Margin="5,0,0,0">
                  <TextBlock x:Name="RecordingTimerText" Text="3.8s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>
        <!-- Upgrade Node 3: Editing -->
        <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Canvas.Left="11" Canvas.Top="286">
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Border Width="87" Height="87" CornerRadius="18" Background="#666666" ClipToBounds="True"/>
            <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
              <ProgressBar Template="{StaticResource ProgressBarTemplate}" Height="30" Width="240" Tag="Editing" Foreground="#008000" Minimum="0" Maximum="100" Value="100"/>
              <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Border Width="162" Height="47" CornerRadius="5" Background="#fa9750">
                  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                    <TextBlock Text="$26.60" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                  </StackPanel>
                </Border>
                <Border Width="73" Height="47" CornerRadius="5" Background="#515151" Margin="5,0,0,0">
                  <TextBlock x:Name="EditingTimerText" Text="7.1s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>
        <!-- Upgrade Node 4: Thumbnail (Disabled Example) -->
        <Border Width="371" Height="119" CornerRadius="8" Background="#66000000" Padding="16" Canvas.Left="11" Canvas.Top="415">
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Border Width="87" Height="87" CornerRadius="18" Background="#444444" ClipToBounds="True"/>
            <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
              <ProgressBar Template="{StaticResource ProgressBarTemplateDisabled}" Height="30" Width="240" Tag="Thumbnail" Minimum="0" Maximum="100" Value="0"/>
              <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Border Width="162" Height="47" CornerRadius="5" Background="#4a4a4a">
                  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Locked" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#888888"/>
                    <TextBlock Text="---" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#666666"/>
                  </StackPanel>
                </Border>
                <Border Width="73" Height="47" CornerRadius="5" Background="#3a3a3a" Margin="5,0,0,0">
                  <TextBlock Text="--" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#666666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>
        <!-- Upgrade Node 5: Upload (Disabled Example) -->
        <Border Width="371" Height="119" CornerRadius="8" Background="#66000000" Padding="16" Canvas.Left="11" Canvas.Top="544">
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Border Width="87" Height="87" CornerRadius="18" Background="#444444" ClipToBounds="True"/>
            <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
              <ProgressBar Template="{StaticResource ProgressBarTemplateDisabled}" Height="30" Width="240" Tag="Upload" Minimum="0" Maximum="100" Value="0"/>
              <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Border Width="162" Height="47" CornerRadius="5" Background="#4a4a4a">
                  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Locked" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#888888"/>
                    <TextBlock Text="---" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#666666"/>
                  </StackPanel>
                </Border>
                <Border Width="73" Height="47" CornerRadius="5" Background="#3a3a3a" Margin="5,0,0,0">
                  <TextBlock Text="--" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#666666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>
      </Canvas>
    </Grid>
  </Border>
</Grid>