<Component
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ComponentRoot"
    mc:Ignorable="d" xmlns:b="http://schemas.microsoft.com/xaml/behaviors" xmlns:noesis="clr-namespace:NoesisGUIExtensions">
    <Component.DynamicProperties>
        <DynamicProperty Name="CompoTitle" Type="String" />
        <DynamicProperty Name="CompoIconCode" Type="String"/>
    </Component.DynamicProperties>
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup0"/>
        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Canvas VerticalAlignment="Center" HorizontalAlignment="Left" Height="60" Width="67.7">
                <b:Interaction.Behaviors>
                    <noesis:BackgroundEffectBehavior/>
                </b:Interaction.Behaviors>
                <Path Data="F1M65.3,60H2c-0.8,-0.8 -1.2,-1.2 -2,-2V20C7.8,12.2 12.2,7.8 20,0h45.3c0.8,0.8 1.2,1.2 2,2v56C66.6,58.8 66.1,59.2 65.3,60z" Stretch="Fill" Height="60" Width="67.3" Canvas.Top="0" Canvas.Left="0">
                    <Path.Fill>
                        <SolidColorBrush Color="#FF000000"/>
                    </Path.Fill>
                </Path>
                <Path x:Name="Path0" Data="F1M0,0 0,12 12,0z" Stretch="Fill" Height="12" Width="12" Canvas.Top="0" Canvas.Left="0">
                    <Path.Fill>
                        <SolidColorBrush Color="{DynamicResource Fuchsia}"/>
                    </Path.Fill>
                </Path>
            </Canvas>
            <TextBlock Text="{Binding Path=CompoIconCode_Str, ElementName=ComponentRoot}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,2,0" TextAlignment="Center" FontFamily="Assets/Fonts/#paradigm" FontSize="40">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{DynamicResource Cream}"/>
                </TextBlock.Foreground>
            </TextBlock>
        </Grid>
        <Grid Grid.Column="1">
            <Border x:Name="Border0" OpacityMask="{StaticResource Stripes.Brush}" Opacity="0.652" Background="{DynamicResource FuchsiaFading.Brush}"/>
            <TextBlock FontFamily="Assets/Fonts/#Oxanium" FontSize="31" FontWeight="DemiBold" TextAlignment="Center" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Path=CompoTitle_Str, ElementName=ComponentRoot}" CharacterSpacing="51" HorizontalAlignment="Center" Margin="5,0,17,0">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{DynamicResource AliceBlue}"/>
                </TextBlock.Foreground>
            </TextBlock>
        </Grid>
    </Grid>
</Component>
