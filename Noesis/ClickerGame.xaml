<!-- 
  ClickerGame - Unified Noesis XAML
  Single page containing all game screens with visibility-based navigation
-->

<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Width="393"
  Height="852">

  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Main Container                                                                      -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Border Width="393" Height="852" ClipToBounds="True">
    <Border.Background>
      <LinearGradientBrush StartPoint="0.50,-0.00" EndPoint="0.50,1.00">
        <GradientStop Color="#2773ea" Offset="0.00"/>
        <GradientStop Color="#1e4dce" Offset="1.00"/>
      </LinearGradientBrush>
    </Border.Background>
    
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="143"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="124"/>
      </Grid.RowDefinitions>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Header - Cookie Count (Shared across all pages)                                   -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Border Width="393" Height="143" Background="#80000000" Padding="16,58,16,8" Grid.Row="0">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <TextBlock Text="{Binding Path=cookieCount}" FontFamily="Fonts/#Anton-Regular" FontSize="36" Foreground="#ffffff" TextAlignment="Center"/>
          <TextBlock Text="{Binding Path=cookiesPerSecond}" FontFamily="Fonts/#Anton-Regular" FontSize="15" Foreground="#ffffff" TextAlignment="Center"/>
        </StackPanel>
      </Border>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Page Content Area                                                                 -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Grid Grid.Row="1">
        
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- Region: HOME PAGE - Clickable Cookie                                                    -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <Grid Visibility="{Binding Path=homePageVisible}">
          <Button Command="{Binding Path=onCookieClick}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Coogie.png" Width="256" Height="256" Stretch="UniformToFill"/>
          </Button>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- Region: SHOP PAGE - Upgrade Cards                                                       -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <ScrollViewer Visibility="{Binding Path=shopPageVisible}" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Padding="0,8,0,8">
          <ItemsControl ItemsSource="{Binding Path=upgrades}" HorizontalAlignment="Center">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical"/>
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
                  <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Upgrade Image -->
                    <Image Source="{Binding Path=image}" Width="87" Height="87" Stretch="UniformToFill"/>
                    
                    <!-- Upgrade Details -->
                    <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                      <!-- Upgrade Name -->
                      <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                        <TextBlock Text="{Binding Path=name}" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                      </Border>
                      
                      <!-- Buy Button and Rate -->
                      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                        <!-- Buy Button -->
                        <Button Width="163" Height="47" Command="{Binding Path=buyCommand}" Background="Transparent" BorderThickness="0" Padding="0">
                          <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                              <TextBlock Text="{Binding Path=buyLabel}" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                              <TextBlock Text="{Binding Path=price}" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                            </StackPanel>
                          </Border>
                        </Button>
                        
                        <!-- Production Rate -->
                        <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                          <TextBlock Text="{Binding Path=rate}" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                      </StackPanel>
                    </StackPanel>
                  </StackPanel>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>

        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- Region: STATS PAGE - Player Statistics                                                  -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <Grid Visibility="{Binding Path=statsPageVisible}" Margin="16,16,16,16">
          <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <!-- Stats Title -->
            <TextBlock Text="Your Stats" FontFamily="Fonts/#Anton-Regular" FontSize="32" Foreground="#ffffff" TextAlignment="Center" Margin="0,0,0,20"/>
            
            <!-- Stats Cards -->
            <Border Width="361" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Cookies Per Click:" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" Width="200"/>
                <TextBlock Text="{Binding Path=cookiesPerClick}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#fa9750"/>
              </StackPanel>
            </Border>
            
            <Border Width="361" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Cookies Per Second:" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" Width="200"/>
                <TextBlock Text="{Binding Path=currentCPS}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#fa9750"/>
              </StackPanel>
            </Border>
            
            <Border Width="361" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Upgrades:" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" Width="200"/>
                <TextBlock Text="{Binding Path=totalUpgrades}" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#fa9750"/>
              </StackPanel>
            </Border>
          </StackPanel>
        </Grid>

      </Grid>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Footer - Navigation Tabs                                                          -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Border Width="393" Height="124" Background="#80000000" Padding="16" Grid.Row="2" HorizontalAlignment="Center">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="93"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="93"/>
          </Grid.ColumnDefinitions>
          <Button Grid.Column="0" Command="{Binding Path=events.onShopClick}" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <Image Source="LeftTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
          <Button Grid.Column="2" Command="{Binding Path=events.onHomeClick}" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <Image Source="MiddleTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
          <Button Grid.Column="4" Command="{Binding Path=events.onStatsClick}" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <Image Source="RightTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
        </Grid>
      </Border>
    </Grid>
  </Border>
</Grid>