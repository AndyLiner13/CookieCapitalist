<!-- 
  ClickerGame - Unified Noesis XAML
  Single page containing all game screens with VisualStateManager navigation
-->

<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DataContext="ClickerGame_DataSet"
  d:DesignWidth="393"
  d:DesignHeight="852">

<Page.Resources>
  <ResourceDictionary>
    <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="GlobalResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>
  </ResourceDictionary>
</Page.Resources>

<Grid Width="393" Height="852">

  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <!-- Region: Main Container                                                                      -->
  <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
  <Border Width="393" Height="852" ClipToBounds="True">
    <Border.Background>
      <LinearGradientBrush StartPoint="0.50,-0.00" EndPoint="0.50,1.00">
        <GradientStop Color="#2773ea" Offset="0.00"/>
        <GradientStop Color="#1e4dce" Offset="1.00"/>
      </LinearGradientBrush>
    </Border.Background>
    
    <Grid>
      <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Initial State Trigger - Sets default navigation state on load                   -->
      <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
      <b:Interaction.Triggers>
        <b:EventTrigger>
          <b:GoToStateAction StateName="HomeState"/>
        </b:EventTrigger>
      </b:Interaction.Triggers>
      
      <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Visual State Manager - Navigation States                                        -->
      <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
      <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="NavigationStates">
          <VisualStateGroup.Transitions>
            <VisualTransition GeneratedDuration="0:0:0.3"/>
          </VisualStateGroup.Transitions>
          
          <!-- Home State -->
          <VisualState x:Name="HomeState">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HomePage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
              </ObjectAnimationUsingKeyFrames>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ShopPage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
              </ObjectAnimationUsingKeyFrames>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="StatsPage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
              </ObjectAnimationUsingKeyFrames>
            </Storyboard>
          </VisualState>
          
          <!-- Shop State -->
          <VisualState x:Name="ShopState">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HomePage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
              </ObjectAnimationUsingKeyFrames>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ShopPage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
              </ObjectAnimationUsingKeyFrames>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="StatsPage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
              </ObjectAnimationUsingKeyFrames>
            </Storyboard>
          </VisualState>
          
          <!-- Stats State -->
          <VisualState x:Name="StatsState">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HomePage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
              </ObjectAnimationUsingKeyFrames>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ShopPage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
              </ObjectAnimationUsingKeyFrames>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="StatsPage" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
              </ObjectAnimationUsingKeyFrames>
            </Storyboard>
          </VisualState>
        </VisualStateGroup>
      </VisualStateManager.VisualStateGroups>
      
      <Grid.RowDefinitions>
        <RowDefinition Height="143"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="124"/>
      </Grid.RowDefinitions>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Header - Cookie Count (Shared across all pages)                                   -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Border Width="393" Height="143" Background="#80000000" Padding="16,58,16,8" Grid.Row="0">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <TextBlock Text="123,456 Cookies!" FontFamily="Fonts/#Anton-Regular" FontSize="36" Foreground="#ffffff" TextAlignment="Center"/>
          <TextBlock Text="1,234 per second" FontFamily="Fonts/#Anton-Regular" FontSize="15" Foreground="#ffffff" TextAlignment="Center"/>
        </StackPanel>
      </Border>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Page Content Area                                                                 -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Grid Grid.Row="1">
        
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- Region: HOME PAGE - Clickable Cookie                                                    -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <Grid x:Name="HomePage">
          <!-- Ring of Pointers around Cookie -->
          <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="256" Height="256">
            <!-- Pointer at 0° (top) - rotated 180° to point down toward center -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="112" Canvas.Top="-48" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="180"/>
              </Image.RenderTransform>
            </Image>
            <!-- Pointer at 45° (top-right) - rotated 225° to point toward center -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="219" Canvas.Top="-5" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="225"/>
              </Image.RenderTransform>
            </Image>
            <!-- Pointer at 90° (right) - rotated 270° to point left toward center -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="262" Canvas.Top="112" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="270"/>
              </Image.RenderTransform>
            </Image>
            <!-- Pointer at 135° (bottom-right) - rotated 315° to point toward center -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="219" Canvas.Top="219" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="315"/>
              </Image.RenderTransform>
            </Image>
            <!-- Pointer at 180° (bottom) - rotated 0° (already pointing up toward center) -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="112" Canvas.Top="262" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="0"/>
              </Image.RenderTransform>
            </Image>
            <!-- Pointer at 225° (bottom-left) - rotated 45° to point toward center -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="-5" Canvas.Top="219" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="45"/>
              </Image.RenderTransform>
            </Image>
            <!-- Pointer at 270° (left) - rotated 90° to point right toward center -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="-48" Canvas.Top="112" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="90"/>
              </Image.RenderTransform>
            </Image>
            <!-- Pointer at 315° (top-left) - rotated 135° to point toward center -->
            <Image Source="Pointer.png" Width="32" Height="32" Canvas.Left="-5" Canvas.Top="-5" RenderTransformOrigin="0.5,0.5">
              <Image.RenderTransform>
                <RotateTransform Angle="135"/>
              </Image.RenderTransform>
            </Image>
          </Canvas>
          
          <!-- Clickable Cookie (centered) -->
          <Button Command="{Binding Path=onCookieClick}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Coogie.png" Width="256" Height="256" Stretch="UniformToFill"/>
          </Button>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- Region: SHOP PAGE - Upgrade Cards                                                       -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <ScrollViewer x:Name="ShopPage" Visibility="Hidden" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Padding="0,8,0,8">
          <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <!-- Upgrade Card 1: Clicker -->
            <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="ClickerImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                  <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="+1 Cookie Clicker" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                  </Border>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                      <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                          <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                          <TextBlock Text="15 cookies" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                        </StackPanel>
                      </Border>
                    </Button>
                    <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                      <TextBlock Text="0.1s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
            
            <!-- Upgrade Card 2: Grandma -->
            <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="GrandmaImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                  <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="Grandma" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                  </Border>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                      <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                          <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                          <TextBlock Text="100 cookies" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                        </StackPanel>
                      </Border>
                    </Button>
                    <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                      <TextBlock Text="1s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
            
            <!-- Upgrade Card 3: Farm -->
            <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="FarmImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                  <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="Cookie Farm" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                  </Border>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                      <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                          <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                          <TextBlock Text="1,100 cookies" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                        </StackPanel>
                      </Border>
                    </Button>
                    <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                      <TextBlock Text="8s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
            
            <!-- Upgrade Card 4: Factory -->
            <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="FactoryImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                  <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="Cookie Factory" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                  </Border>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                      <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                          <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                          <TextBlock Text="12,000 cookies" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                        </StackPanel>
                      </Border>
                    </Button>
                    <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                      <TextBlock Text="47s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
            
            <!-- Upgrade Card 5: Laboratory -->
            <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="LabImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                  <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="Cookie Laboratory" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                  </Border>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                      <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                          <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                          <TextBlock Text="130,000 cookies" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                        </StackPanel>
                      </Border>
                    </Button>
                    <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                      <TextBlock Text="260s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
            
            <!-- Upgrade Card 6: Fabricator -->
            <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="FabImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                  <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="Cookie Fabricator" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                  </Border>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                      <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                          <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                          <TextBlock Text="1.4M cookies" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                        </StackPanel>
                      </Border>
                    </Button>
                    <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                      <TextBlock Text="1,400s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
            
            <!-- Upgrade Card 7: Planet -->
            <Border Width="371" Height="119" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="PlanetImage.png" Width="87" Height="87" Stretch="UniformToFill"/>
                <StackPanel Orientation="Vertical" Width="240" Margin="12,0,0,0">
                  <Border Width="240" Height="30" CornerRadius="5" Background="#515151" Padding="8,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="Cookie Planet" FontFamily="Fonts/#Anton-Regular" FontSize="20" Foreground="#ffffff" VerticalAlignment="Center"/>
                  </Border>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <Button Width="163" Height="47" Background="Transparent" BorderThickness="0" Padding="0">
                      <Border Width="163" Height="47" CornerRadius="5" Background="#fa9750">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                          <TextBlock Text="Buy x1" FontFamily="Fonts/#Anton-Regular" FontSize="14" Foreground="#ffffff"/>
                          <TextBlock Text="20M cookies" FontFamily="Fonts/#Anton-Regular" FontSize="12" Foreground="#ffffff"/>
                        </StackPanel>
                      </Border>
                    </Button>
                    <Border Width="73" Height="39" CornerRadius="5" Background="#515151" Margin="5,0,0,0" VerticalAlignment="Center">
                      <TextBlock Text="7,800s" FontFamily="Fonts/#Anton-Regular" FontSize="16" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
            </Border>
          </StackPanel>
        </ScrollViewer>

        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- Region: STATS PAGE - Player Statistics                                                  -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
        <Grid x:Name="StatsPage" Visibility="Hidden" Margin="16,16,16,16">
          <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <!-- Stats Title -->
            <TextBlock Text="Your Stats" FontFamily="Fonts/#Anton-Regular" FontSize="32" Foreground="#ffffff" TextAlignment="Center" Margin="0,0,0,20"/>
            
            <!-- Stats Cards -->
            <Border Width="361" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Cookies Per Click:" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" Width="200"/>
                <TextBlock Text="5" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#fa9750"/>
              </StackPanel>
            </Border>
            
            <Border Width="361" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Cookies Per Second:" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" Width="200"/>
                <TextBlock Text="1,234" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#fa9750"/>
              </StackPanel>
            </Border>
            
            <Border Width="361" CornerRadius="8" Background="#a6000000" Padding="16" Margin="0,0,0,8">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Upgrades:" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#ffffff" Width="200"/>
                <TextBlock Text="42" FontFamily="Fonts/#Anton-Regular" FontSize="18" Foreground="#fa9750"/>
              </StackPanel>
            </Border>
          </StackPanel>
        </Grid>

      </Grid>

      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <!-- Region: Footer - Navigation Tabs                                                          -->
      <!-- ═════════════════════════════════════════════════════════════════════════════════════════ -->
      <Border Width="393" Height="124" Background="#80000000" Padding="16" Grid.Row="2" HorizontalAlignment="Center">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="93"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="93"/>
          </Grid.ColumnDefinitions>
          <Button Grid.Column="0" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <b:Interaction.Triggers>
              <b:EventTrigger EventName="Click">
                <b:GoToStateAction StateName="ShopState"/>
              </b:EventTrigger>
            </b:Interaction.Triggers>
            <Image Source="LeftTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
          <Button Grid.Column="2" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <b:Interaction.Triggers>
              <b:EventTrigger EventName="Click">
                <b:GoToStateAction StateName="HomeState"/>
              </b:EventTrigger>
            </b:Interaction.Triggers>
            <Image Source="MiddleTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
          <Button Grid.Column="4" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center">
            <b:Interaction.Triggers>
              <b:EventTrigger EventName="Click">
                <b:GoToStateAction StateName="StatsState"/>
              </b:EventTrigger>
            </b:Interaction.Triggers>
            <Image Source="RightTab.png" Width="93" Height="92" Stretch="UniformToFill"/>
          </Button>
        </Grid>
      </Border>
    </Grid>
  </Border>
</Grid>
</Page>